<!DOCTYPE html>
<html>
  <head>
    <title>Taskleaf</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <ul class="navbar-nav ml-auto">
          <% if @current_user %>
            <li class="nav-item"><%= link_to "タスク",  tasks_path, class: "nav-link" %></li>
            <% if current_user.admin? %>
              <li class="nav-item"><%= link_to "ユーザー",  admin_users_path, class: "nav-link" %></li>
            <% end %>
            <li class="nav-item"><%= link_to "ログアウト",  logout_path, class: "nav-link" %></li>
          <% else %>
            <li class="nav-item"><%= link_to "ログイン",  login_path, class: "nav-link" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
